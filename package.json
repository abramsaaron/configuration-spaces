{
  "name": "configurationspaceexplorer01",
  "description": "Configuration Space Explorer",
  "version": "1.0.0",
  "author": "Roger Antonsen and Aaron Abrams",
  "private": true,
  "scripts": {
    "build": "NODE_ENV=production run-s html:index terser:app:build:obf terser:lib",
    "cp:copy-p5": "cp node_modules/p5/lib/p5.min.js source/lib/p5.min.js",
    "html:index": "html-minifier-terser --collapse-whitespace --remove-comments --remove-empty-attributes  --remove-redundant-attributes --remove-script-type-attributes --remove-style-link-type-attributes source/index.html -o htdocs/index.html",
    "js": "npm run terser:app && npm run terser:lib",
    "terser:app": "terser source/app/*.js --output htdocs/app.js",
    "terser:app:build": "terser source/app/*.js -m -c -o htdocs/app.js",
    "terser:app:build:obf": "terser source/app/*.js -m -c -o source/app.min.js && javascript-obfuscator source/app.min.js --config obfuscator.low.json --output htdocs/app.js && rm source/app.min.js",
    "terser:lib": "terser source/lib/*.js --output htdocs/lib.js",
    "listen": "npm-run-all --parallel server listen:html:index listen:app listen:lib",
    "listen:html:index": "onchange 'source/index.html' -- npm run html:index",
    "listen:app": "onchange ./source/app/*.js -- npm run terser:app",
    "listen:lib": "onchange ./source/lib/*.js -- npm run terser:lib",
    "server": "lite-server"
  },
  "devDependencies": {
    "html-minifier-terser": "^5.1.1",
    "javascript-obfuscator": "^2.11.0",
    "lite-server": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "p5": "^1.2.0",
    "terser": "^5.5.1",
    "three": "^0.125.2"
  }
}
