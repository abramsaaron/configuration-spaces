{
  "name": "configurationspaceexplorer01",
  "description": "Configuration Space Explorer",
  "version": "1.0.0",
  "author": "Roger Antonsen and Aaron Abrams",
  "private": true,
  "scripts": {
    "build:message": "echo -------------------------------- build --------------------------------",
    "build": "NODE_ENV=production npm-run-all copy:* js:build:* css:build:* php:build:*",
    "dev": "NODE_ENV=development npm-run-all --parallel js:listen:* css:listen:* php:listen:* server",
    "php": "php -S localhost:3434 -t htdocs",
    "open": "browser-sync start --no-notify --proxy 'localhost:3434' --browser 'Firefox Developer Edition' --port 3434 --files 'htdocs'",
    "server": "npm-run-all --parallel php open",
    "copy:message": "echo -------------------------------- copy --------------------------------",
    "copy:alpine": "cp node_modules/alpinejs/dist/cdn.min.js source/lib/0-alpinejs.min.js",
    "copy:lilgui": "cp node_modules/lil-gui/dist/lil-gui.umd.min.js source/lib/lil-gui.umd.min.js",
    "copy:p5": "cp node_modules/p5/lib/p5.min.js source/lib/0-p5.min.js",
    "js:message": "echo -------------------------------- js --------------------------------",
    "js:build:app": "terser source/app/*.js -m -c -o htdocs/app.js",
    "js:build:lib": "terser source/lib/*.js -m -c -o htdocs/lib.js",
    "js:listen:app": "onchange 'source/app/*.js' -- terser source/app/*.js -o htdocs/app.js",
    "js:listen:lib": "onchange 'source/lib/*.js' -- terser source/lib/*.js -o htdocs/lib.js",
    "css:message": "echo -------------------------------- css --------------------------------",
    "css:build:tailwind": "npx tailwindcss -i source/css/styles.css -o htdocs/styles.css --minify",
    "css:listen:tailwind": "npx tailwindcss -i source/css/styles.css -o htdocs/styles.css --minify --watch",
    "php:message": "echo -------------------------------- php --------------------------------",
    "php:build:index": "html-minifier-terser --collapse-whitespace --remove-comments --remove-empty-attributes  --remove-redundant-attributes --remove-script-type-attributes --remove-style-link-type-attributes source/index.php -o htdocs/index.php",
    "php:build:grid": "html-minifier-terser --collapse-whitespace --remove-comments --remove-empty-attributes  --remove-redundant-attributes --remove-script-type-attributes --remove-style-link-type-attributes source/grid.php -o htdocs/grid.php",
    "php:listen:index": "onchange 'source/index.php' -- npm run php:build:index",
    "php:listen:grid": "onchange 'source/grid.php' -- npm run php:build:grid",
    "update:message": "echo -------------------------------- update --------------------------------",
    "update": "npm-run-all update:* copy:*",
    "update:npm": "npm -g update",
    "update:ncu": "ncu -u"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.7",
    "alpinejs": "^3.10.5",
    "browser-sync": "^2.27.10",
    "daisyui": "^2.33.0",
    "html-minifier-terser": "^7.0.0",
    "lil-gui": "^0.17.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "p5": "^1.5.0",
    "stats.js": "^0.17.0",
    "tailwindcss": "^3.2.1",
    "terser": "^5.15.1"
  }
}
